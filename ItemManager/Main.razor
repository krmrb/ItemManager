<h1 style="background: #2c3e50; color: white; padding: 15px; margin: 0;">
    📋 ItemManager
</h1>

<div style="padding: 20px;">
    <button @onclick="ShowHome" style="padding: 10px; margin: 5px; background: #3498db; color: white; border: none;">
        🏠 Accueil
    </button>
    <button @onclick="ShowItems" style="padding: 10px; margin: 5px; background: #2ecc71; color: white; border: none;">
        📋 Items
    </button>
</div>

<div style="padding: 20px; border: 1px solid #ccc; margin: 20px;">
    @if (currentView == "home")
    {
        <h2>🏠 PAGE ACCUEIL</h2>
        <p>Contenu de la page d'accueil</p>
    }
    else
    {
        <h2>📋 PAGE ITEMS</h2>
        <p>Contenu de la page items</p>
    }
</div>

@code {
    private string currentView = "home";

    private void ShowHome() => currentView = "home";
    private void ShowItems() => currentView = "items";
}